<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="To Test Change Password Feature">

	<test name="Change password with Valid inputs" enabled="true">
		<classes>
			<class name="com.rechargeitnow.wapTest.ChangePasswordTest">
				<methods>
					<include name="testChangePassword_WithValidInput" />
				</methods>
			</class>
		</classes>
	</test> <!-- Test -->
	
	<test name="Change password with blank inputs" enabled="true">
		<classes>
			<class name="com.rechargeitnow.wapTest.ChangePasswordTest">
				<methods>
					<include name="testChangePassword_WithBlankInputs" />
				</methods>
			</class>
		</classes>
	</test> <!-- Test -->
	
	<test name="Change password with same inputs in all fields" enabled="true">
		<classes>
			<class name="com.rechargeitnow.wapTest.ChangePasswordTest">
				<methods>
					<include name="testChangePassword_WithSameInputsAllField" />
				</methods>
			</class>
		</classes>
	</test> <!-- Test -->
	
	<test name="Change password with invalid old password" enabled="true">
		<classes>
			<class name="com.rechargeitnow.wapTest.ChangePasswordTest">
				<methods>
					<include name="testChangePassword_WithInvalidOldPassword" />
				</methods>
			</class>
		</classes>
	</test> <!-- Test -->
	
	<test name="Change password with different new and confirm password" enabled="true">
		<classes>
			<class name="com.rechargeitnow.wapTest.ChangePasswordTest">
				<methods>
					<include name="testChangePassword_WithDiffNewAndConfirmPassword" />
				</methods>
			</class>
		</classes>
	</test> <!-- Test -->
	</suite>